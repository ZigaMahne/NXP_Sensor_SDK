      <files>
        <file category="header" name="middleware/issdk/drivers/gpio/kinetis/gpio_driver.h"/>
        <file category="source" name="middleware/issdk/drivers/gpio/kinetis/gpio_driver.c"/>
        <file category="source" name="middleware/issdk/drivers/gpio/kinetis/gpio_driver_irq.c"/>
      </files>
    </component>
    <component Cclass="Driver" Cgroup="GPIO" Csub="LPC" Capiversion="1.0.0" Cversion="1.0.0" condition="GPIO LPC">
      <description>GPIO Driver for LPC devices</description>
      <files>
        <file category="header" name="middleware/issdk/drivers/gpio/lpc/gpio_driver.h"/>
        <file category="source" name="middleware/issdk/drivers/gpio/lpc/gpio_driver.c"/>
        <file category="source" name="middleware/issdk/drivers/gpio/lpc/gpio_driver_irq.c"/>
      </files>
    </component>
    <component Cclass="Driver" Cgroup="GPIO" Csub="IMX" Capiversion="1.0.0" Cversion="1.0.0" condition="GPIO IMX">
