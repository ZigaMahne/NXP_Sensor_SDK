<?xml version="1.0" encoding="UTF-8"?>
<package xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:noNamespaceSchemaLocation="PACK.xsd" schemaVersion="1.7.15">
  <vendor>NXP</vendor>
  <name>Sensor_MSP</name>
  <description>NXP Sensor Middleware Software Pack</description>
  <url>https://mcuxpresso.nxp.com/cmsis_pack/repo/</url>

  <releases>
    <release version="1.0.0-test">
      Test pack
    </release>
  </releases>

  <requirements>
    <packages>
      <package vendor="ARM" name="CMSIS" version="5.7.0"/>
    </packages>
  </requirements>

  <keywords>
    <keyword>NXP</keyword>
    <keyword>Sensor</keyword>
    <keyword>ISSDK</keyword>
    <keyword>FreeMASTER</keyword>
    <keyword>Middleware Software Pack</keyword>
  </keywords>

  <apis>
    <api Cclass="Driver" Cgroup="GPIO" Capiversion="1.0.0" exclusive="0">
      <description>GPIO Driver API</description>
      <files>
        <file category="header" name="middleware/issdk/drivers/gpio/Driver_GPIO.h"/>
      </files>
    </api>
  </apis>

  <conditions>
    <condition id="GPIO Kinetis">
      <description>GPIO Kinetis devices</description>
      <!-- ToDo -->
    </condition>
    <condition id="GPIO LPC">
      <description>GPIO LPC devices</description>
      <!-- ToDo -->
    </condition>
    <condition id="GPIO IMX">
      <description>GPIO iMX devices</description>
      <!-- ToDo -->
    </condition>
    <condition id="ISSDK HAL">
      <description>ISSDK HAL</description>
      <!-- ToDo -->
    </condition>
    <condition id="ISSDK SysTick">
      <description>ISSDK SysTick Driver</description>
      <require Cclass="CMSIS" Cgroup="CORE"/>
    </condition>
    <condition id="ISSDK Interface I2C">
      <description>ISSDK Interface using I2C</description>
      <require Cclass="CMSIS Driver" Cgroup="I2C"/>
      <require Cclass="Driver" Cgroup="GPIO"/>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="HAL"/>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="Driver" Csub="SysTick"/>
    </condition>
    <condition id="ISSDK Interface SPI">
      <description>ISSDK Interface using SPI</description>
      <require Cclass="CMSIS Driver" Cgroup="SPI"/>
      <require Cclass="Driver" Cgroup="GPIO"/>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="HAL"/>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="Driver" Csub="SysTick"/>
    </condition>
    <condition id="ISSDK Sensor I2C">
      <description>ISSDK Sensor using I2C interface</description>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="Interface" Csub="I2C"/>
    </condition>
    <condition id="ISSDK Sensor SPI">
      <description>ISSDK Sensor using SPI interface</description>
      <require Cbundle="NXP" Cclass="ISSDK" Cgroup="Interface" Csub="SPI"/>
    </condition>
    <condition id="FreeMASTER CORE">
      <description>FreeMASTER Core</description>
      <require Cbundle="NXP" Cclass="FreeMASTER" Cgroup="Driver"/>
    </condition>
    <condition id="FreeMASTER MCUXSDK">
      <description>FreeMASTER using MCUXSDK</description>
      <!-- ToDo -->
    </condition>
  </conditions>

  <components>
    <!-- GPIO Driver -->
    <component Cclass="Driver" Cgroup="GPIO" Csub="Kinetis" Capiversion="1.0.0" Cversion="1.0.0" condition="GPIO Kinetis">
